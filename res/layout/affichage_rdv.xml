<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linearborder_liste_patients"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/avatarRDV"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:padding="10dp" />

     <TextView
        android:id="@+id/dateRDVAffichage"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:paddingLeft="5dp"
        android:paddingTop="20dp"
        android:text="@string/textDateRDVAffichage"
        android:textSize="16sp"
        android:textColor="@color/whiteColor"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/heureRDVAffichage"
         android:layout_width="wrap_content"
         android:layout_height="53dp"
         android:paddingTop="20dp"
         android:paddingLeft="5dp"
         android:text="@string/textHeureRDVAffichage"
         android:textSize="16sp"
         android:textColor="@color/whiteColor"
         android:textStyle="bold" />

    

</LinearLayout>